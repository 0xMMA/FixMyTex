             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:FixMyTex.Features.QuickActions.Models"
             x:Name="ThisControl"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=models:QuickAction, IsDesignTimeCreatable=True}"
             
             >
    <Button x:Name="MainButton" 
            Click="OnButtonClick"
