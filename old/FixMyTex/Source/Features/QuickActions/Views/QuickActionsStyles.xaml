<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:FixMyTex.Features.QuickActions.ViewModels"
    xmlns:local="clr-namespace:FixMyTex.Features.QuickActions.Views">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary>
            <viewModels:StringToBrushConverter x:Key="GlobalStringToBrushConverter"/>
            <viewModels:NumberToVisibilityConverter x:Key="GlobalNumberToVisibilityConverter"/>
            <viewModels:BoolToVisibilityConverter x:Key="GlobalBoolToVisibilityConverter"/>
            <viewModels:CategoryToBrushConverter x:Key="GlobalCategoryToBrushConverter"/>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <!-- Converters -->
    <viewModels:StringToBrushConverter x:Key="StringToBrushConverter"/>
    <viewModels:NumberToVisibilityConverter x:Key="NumberToVisibilityConverter"/>
    <viewModels:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <viewModels:CategoryToBrushConverter x:Key="CategoryToBrushConverter"/>
    
    <!-- Button Styles -->
    <Style x:Key="QuickActionButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <!-- Text Styles -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
    <!-- Button Text Styles -->
    <Style x:Key="ButtonPrimaryTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="ButtonSecondaryTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="8"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,-2,0,0"/>
    </Style>

    <!-- Border Styles -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#252525"/>
        <Setter Property="BorderBrush" Value="#333333"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="4"/>
    </Style>
</ResourceDictionary>