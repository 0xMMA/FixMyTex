  </PropertyGroup>

  <ItemGroup>
    <None Remove="icons8-mutig-ai-32.png" />
  </ItemGroup>

  <ItemGroup>
    <ApplicationDefinition Include="Source\App.xaml">
      <Generator>MSBuild:Compile</Generator>
