  </ItemGroup>

  <ItemGroup>
    <Page Include="Source\MainWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Anthropic" Version="3.4.0" />
