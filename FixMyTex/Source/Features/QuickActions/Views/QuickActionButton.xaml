<UserControl x:Class="FixMyTex.Features.QuickActions.Views.QuickActionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="ThisControl"
             mc:Ignorable="d" 
             Height="50" Width="60">
    <Button x:Name="MainButton" 
            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
            Click="OnButtonClick">
        <StackPanel>
            <Border x:Name="NumberBorder" 
                    Background="{Binding NumberBackground, ElementName=ThisControl}" 
                    Width="30" Height="30" 
                    CornerRadius="5" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,4">
                <TextBlock x:Name="NumberText" 
                           Text="{Binding Number, ElementName=ThisControl}" 
                           Foreground="White" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" />
            </Border>
            <TextBlock x:Name="ActionText" 
                       Text="{Binding Text, ElementName=ThisControl}" 
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       FontSize="11" />
        </StackPanel>
    </Button>
</UserControl>