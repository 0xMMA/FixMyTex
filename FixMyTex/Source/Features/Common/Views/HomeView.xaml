<UserControl x:Class="FixMyTex.Features.Common.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,-24,0">
            <StackPanel Margin="0,0,24,0">
                <!-- Welcome Section -->
                <TextBlock Text="Welcome to FixMyTex" 
                         Style="{StaticResource FluentTitleTextStyle}" />
                           
                <TextBlock Style="{StaticResource FluentBodyTextStyle}" Margin="0,0,0,24">
                    FixMyTex enhances your writing with AI-powered grammar, style, and text improvements 
                    - just a keyboard shortcut away.
                </TextBlock>
                
                <!-- Quick Start -->
                <TextBlock Text="Quick Start" 
                         Style="{StaticResource FluentSubtitleTextStyle}" />
                           
                <Border Style="{StaticResource FluentCardBorderStyle}">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,12">
                            <Run FontWeight="Bold">1.</Run> Select text in any application
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,12">
                            <Run FontWeight="Bold">2.</Run> Press <TextBlock FontFamily="Consolas" Background="{DynamicResource AccentColorLight3Brush}" Padding="3,0">Ctrl+G</TextBlock> to enhance your text
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap">
                            <Run FontWeight="Bold">3.</Run> Your text will be replaced with the improved version
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- Features -->
                <TextBlock Text="Key Features" 
                         Style="{StaticResource FluentSubtitleTextStyle}" />
                
                <UniformGrid Columns="2" Margin="0,0,0,8">
                    <Border Style="{StaticResource FluentCardBorderStyle}" Margin="0,0,8,8">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Margin="0,0,0,8">Multiple AI Providers</TextBlock>
                            <TextBlock TextWrapping="Wrap">
                                Support for OpenAI, Claude, and Microsoft Semantic Kernel
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource FluentCardBorderStyle}" Margin="8,0,0,8">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Margin="0,0,0,8">Smart Formatting</TextBlock>
                            <TextBlock TextWrapping="Wrap">
                                Detects source application and applies appropriate formatting
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource FluentCardBorderStyle}" Margin="0,8,8,0">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Margin="0,0,0,8">Global Hotkeys</TextBlock>
                            <TextBlock TextWrapping="Wrap">
                                Works across all applications with customizable shortcuts
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource FluentCardBorderStyle}" Margin="8,8,0,0">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Margin="0,0,0,8">Minimal Interface</TextBlock>
                            <TextBlock TextWrapping="Wrap">
                                Runs in the background with minimal workflow interruption
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                
                <!-- Coming Soon -->
                <TextBlock Text="Coming Soon" 
                         Style="{StaticResource FluentSubtitleTextStyle}" />
                
                <Border Style="{StaticResource FluentAccentCardStyle}">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                            <Run FontWeight="Bold">• Quick Actions:</Run> Radial menu for quick text transformations
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                            <Run FontWeight="Bold">• Smart Selection:</Run> OCR and screenshot integration
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                            <Run FontWeight="Bold">• Prompt Blocks:</Run> Modular prompt architecture
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap">
                            <Run FontWeight="Bold">• API Key Management:</Run> In-app configuration
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>